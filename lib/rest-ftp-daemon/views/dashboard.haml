        .col-md-12
          = render :dashboard_jobs

      .row
        .col-md-5
          = render :dashboard_workers

        .col-md-4
          = render :dashboard_counters

        .col-md-3
          = render :dashboard_rates

      .row
        .col-md-12
          = render :dashboard_tokens

    .footer
      .container-fluid
        = render :dashboard_footer
